{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate, max-age=0",
        "pragma": "no-cache",
        "expires": "0"
      },
      "continue": true
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate, max-age=0" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ]
} 